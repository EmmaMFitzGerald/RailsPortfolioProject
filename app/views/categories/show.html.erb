<% if @memories.any? %>
    <% @memories.each do |memory|%>
        <%= link_to memory.child.name, memory.child %>
        <%= memory.title %>
        <%= memory.content %>
        <%= memory.memory_date %>
    <% end %>
<% else %>
    No memories have been made for this category yet! <%= link_to "Back to see categories", categories_path %>
<% end %>